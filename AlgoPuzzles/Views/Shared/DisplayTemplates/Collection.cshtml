@using System.ComponentModel
@{
    string value = null;
    if (Model != null)
    {
        var convertor = TypeDescriptor.GetConverter(Model);
        if (convertor?.CanConvertTo(typeof(string)) ?? false)
        {
            value = convertor.ConvertToString(Model);
        }
        else
        {
            value = Model.ToString();
        }
    }
}
@value

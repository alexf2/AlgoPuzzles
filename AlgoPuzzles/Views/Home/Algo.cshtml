@model AlgoPuzzles.Models.Registry

@{
    var algo = Model.Selected;
    var testCount = 1;
}

<article>
    <div class="panel-group">
        <div class="row">
            <div class="col-xs-12">
                @Html.Raw(algo.Description)
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">&nbsp;</div>
        </div>

        @foreach (var testCase in algo.TestSet)
        {
            var formId = $"form{Model.Index}_{testCount}";

        <div class="panel panel-default">
            <div class="panel-heading"><strong>Test set @(testCount++)</strong></div>
            <div class="panel-body">
                <div class="row row-item">
                    <div class="col-xs-5 col-border">                        
                        <form id="@(formId)" asp-action="Execute" asp-controller="" asp-antiforgery="true" asp-route-algoIndex="@(Model.Index)" method="post">
                            @Html.Partial("TestEditor", testCase)
                            <button type="submit" class="btn btn-primary btn-xs">Run</button>
                        </form>
                    </div>
                    <div class="col-xs-7 col-border">
                        <strong>Result:</strong><br/><br />
                        <div class="alert alert-danger" style="display:none"><button type="button" class="close" aria-hidden="true">&times;</button><div class="msg-area">&nbsp;</div></div>
                        <div class="result-area">&nbsp;</div>
                    </div>
                </div>                
            </div>
        </div>
        }
    </div>
</article>

